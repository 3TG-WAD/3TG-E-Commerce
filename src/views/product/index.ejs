<div class="container mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm">
            <li><a href="/" class="text-gray-500 hover:text-gray-900">Home</a></li>
            <li><span class="text-gray-500">/</span></li>
            <li><a href="/categories/<%= product.category_slug %>" class="text-gray-500 hover:text-gray-900"><%= product.category %></a></li>
            <li><span class="text-gray-500">/</span></li>
            <li class="text-gray-900"><%= product.name %></li>
        </ol>
    </nav>

    <!-- Product Details -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Product Images -->
        <div class="space-y-4">
            <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden">
                <img src="<%= product.images[0] %>" 
                     alt="<%= product.name %>" 
                     class="w-full h-full object-cover">
            </div>
            <div class="grid grid-cols-4 gap-4">
                <% product.images.slice(1).forEach(image => { %>
                    <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden">
                        <img src="<%= image %>" 
                             alt="<%= product.name %>" 
                             class="w-full h-full object-cover cursor-pointer hover:opacity-75">
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- Product Info -->
        <div>
            <h1 class="text-3xl font-bold mb-4"><%= product.name %></h1>
            
            <!-- Price -->
            <div class="flex items-center gap-4 mb-6">
                <span class="text-2xl font-bold"><%= formatToVND(product.finalPrice) %></span>
                <% if (product.discount > 0) { %>
                    <span class="text-lg text-gray-500 line-through"><%= formatToVND(product.price) %></span>
                    <span class="text-lg text-red-500">-<%= product.discount %>%</span>
                <% } %>
            </div>

            <!-- Color -->
            <div class="mb-6">
                <h3 class="font-medium mb-2">Color</h3>
                <div class="text-gray-600"><%= product.color %></div>
            </div>

            <!-- Add to Cart -->
            <div class="flex items-center gap-4 mb-8">
                <div class="flex items-center">
                    <input type="number" 
                           value="1" 
                           min="1"
                           class="w-20 px-3 py-2 border rounded focus:outline-none focus:border-gray-500">
                </div>
                <button class="flex-1 bg-gray-900 text-white py-2 rounded hover:bg-gray-800">
                    Add to Cart
                </button>
            </div>

            <!-- Description -->
            <div class="prose max-w-none">
                <h3 class="font-medium mb-2">Description</h3>
                <p><%= product.description %></p>
            </div>

            <!-- Specifications -->
            <% if (product.specifications) { %>
                <div class="mt-8">
                    <h3 class="font-medium mb-2">Specifications</h3>
                    <dl class="grid grid-cols-2 gap-4">
                        <% Object.entries(product.specifications).forEach(([key, value]) => { %>
                            <dt class="text-gray-600"><%= formatSpecKey(key) %></dt>
                            <dd><%= value %></dd>
                        <% }) %>
                    </dl>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="mt-16">
        <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold">Reviews (<%= reviews.totalReviews %>)</h2>
            <div class="flex items-center gap-4">
                <button class="px-4 py-2 border rounded hover:bg-gray-50">
                    <i class="fas fa-sort"></i>
                    Latest
                </button>
                <% if (user) { %>
                    <button class="px-4 py-2 bg-black text-white rounded hover:bg-gray-800">
                        Write a Review
                    </button>
                <% } %>
            </div>
        </div>

        <!-- Reviews List -->
        <div class="space-y-8">
            <% reviews.items.forEach(review => { %>
                <!-- Single Review -->
                <div class="border-b pb-8">
                    <div class="flex justify-between mb-4">
                        <div>
                            <div class="flex items-center gap-2 mb-2">
                                <div class="flex text-yellow-400">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <% if (i <= review.rating) { %>
                                            <i class="fas fa-star"></i>
                                        <% } else if (i - 0.5 <= review.rating) { %>
                                            <i class="fas fa-star-half-alt"></i>
                                        <% } else { %>
                                            <i class="far fa-star"></i>
                                        <% } %>
                                    <% } %>
                                </div>
                                <span class="font-medium"><%= review.user_name %></span>
                                <span class="bg-green-500 w-2 h-2 rounded-full"></span>
                            </div>
                            <p class="text-gray-600 mb-2">
                                "<%= review.comment %>"
                            </p>
                            <span class="text-sm text-gray-500">Posted on <%= new Date(review.created_at).toLocaleDateString() %></span>
                        </div>
                        <button class="text-gray-400 hover:text-gray-600">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Load More Button -->
        <% if (reviews.currentPage < reviews.totalPages) { %>
            <div class="text-center mt-8">
                <a href="?review_page=<%= reviews.currentPage + 1 %>" class="px-6 py-2 border rounded hover:bg-gray-50">
                    Load More Reviews
                </a>
            </div>
        <% } %>
    </div>

    <!-- Recommended Products Section -->
    <div class="mt-16">
        <h2 class="text-2xl font-bold mb-8">You May Also Like</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <% recommended.items.forEach(item => { %>
                <!-- Single Product Card -->
                <a href="/products/<%= item.product_id %>" class="group">
                    <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden mb-4">
                        <img src="<%= item.photos[0] %>" 
                             alt="<%= item.product_name %>" 
                             class="w-full h-full object-cover group-hover:scale-105 transition-transform">
                    </div>
                    <h3 class="font-medium mb-2"><%= item.product_name %></h3>
                    <div class="flex items-center justify-between">
                        <div>
                            <span class="font-bold"><%= formatToVND(item.price) %></span>
                            <% if (item.discount > 0) { %>
                                <span class="text-sm text-gray-500 line-through ml-2">
                                    <%= formatToVND(item.original_price) %>
                                </span>
                            <% } %>
                        </div>
                        <% if (item.discount > 0) { %>
                            <span class="text-red-500 text-sm">-<%= item.discount %>%</span>
                        <% } %>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>
</div>