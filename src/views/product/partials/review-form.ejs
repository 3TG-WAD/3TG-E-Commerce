<!-- Review Modal -->
<div id="reviewModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg w-full max-w-xl mx-4 overflow-hidden">
        <!-- Modal Header -->
        <div class="px-6 py-4 border-b flex justify-between items-center">
            <h3 class="text-xl font-semibold">Write a Review</h3>
            <button type="button" class="text-gray-400 hover:text-gray-500" onclick="document.getElementById('reviewModal').classList.add('hidden')">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Modal Body -->
        <form id="reviewForm" class="p-6">
            <!-- Rating Stars -->
            <div class="mb-6">
                <label class="block mb-2 font-medium">Rating</label>
                <div class="flex gap-4" id="ratingStars">
                    <% for(let i = 1; i <= 5; i++) { %>
                        <label class="cursor-pointer">
                            <input type="radio" name="rating" value="<%= i %>" class="hidden peer">
                            <svg class="w-8 h-8 text-gray-300 hover:text-yellow-400 transition-colors star-icon" 
                                 data-rating="<%= i %>"
                                 fill="currentColor" 
                                 viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                        </label>
                    <% } %>
                </div>
            </div>

            <!-- Comment -->
            <div class="mb-6">
                <label class="block mb-2 font-medium">Your Review</label>
                <textarea 
                    name="comment"
                    rows="4"
                    class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Share your thoughts about this product..."
                ></textarea>
            </div>

            <!-- Image Upload -->
            <div class="mb-6">
                <label class="block mb-2 font-medium">Photos (optional)</label>
                <div class="flex items-center justify-center w-full">
                    <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <svg class="w-8 h-8 mb-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                            </svg>
                            <p class="mb-2 text-sm text-gray-500">Click to upload or drag and drop</p>
                            <p class="text-xs text-gray-500">PNG, JPG up to 5MB</p>
                        </div>
                        <input 
                            type="file" 
                            id="reviewImages"
                            name="photos" 
                            multiple 
                            accept="image/*"
                            class="hidden"
                        >
                    </label>
                </div>
                <div id="imagePreview" class="mt-4 flex flex-wrap gap-2"></div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button 
                    type="submit"
                    class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                >
                    Submit Review
                </button>
            </div>
        </form>
    </div>
</div>