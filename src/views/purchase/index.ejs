<div class="min-h-screen bg-gray-100 py-6">
    <div class="container mx-auto px-4">
        <!-- Tabs -->
        <div class="bg-white rounded-lg shadow mb-4">
            <div id="orderTabs" class="flex space-x-1 bg-gray-100 p-1 rounded-xl mb-6">
                <button data-tab="all" 
                        class="tab-button flex-1 py-3 px-6 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none
                               active-tab">
                    All
                </button>
                <button data-tab="pending" 
                        class="tab-button flex-1 py-3 px-6 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none">
                    Pending
                </button>
                <button data-tab="processing" 
                        class="tab-button flex-1 py-3 px-6 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none">
                    Processing
                </button>
                <button data-tab="shipping" 
                        class="tab-button flex-1 py-3 px-6 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none">
                    Shipping
                </button>
                <button data-tab="completed" 
                        class="tab-button flex-1 py-3 px-6 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none">
                    Completed
                </button>
                <button data-tab="cancelled" 
                        class="tab-button flex-1 py-3 px-6 text-sm font-medium rounded-lg transition-all duration-200 focus:outline-none">
                    Cancelled
                </button>
            </div>
        </div>


        <!-- Search Bar -->
        <div class="relative max-w-2xl mx-auto mb-6">
            <input type="text" 
                   class="w-full px-4 py-2.5 text-sm rounded-lg border border-gray-200 
                          focus:outline-none focus:border-blue-500 focus:ring-1 
                          focus:ring-blue-500 transition-colors"
                   placeholder="Search by Order ID, Shop name or Product name">
        </div>

        <!-- Content Area -->
        <div id="purchaseContent" class="purchase-content">
            <!-- Empty State -->
            <div class="empty-state bg-white rounded-lg shadow p-8 text-center">
                <img src="/images/orders/empty-order.png" alt="No Orders" class="w-11 h-11 mx-auto mb-4">
                <p class="text-gray-500">Empty</p>
            </div>
        </div>
    </div>
</div>

