<div class="container mx-auto px-4 py-8">
  <!-- Breadcrumb -->
  <nav class="flex mb-4 text-sm">
    <a href="/" class="text-gray-500">Home</a>
    <span class="mx-2 text-gray-500">/</span>
    <span class="text-gray-900"><%= category.category_name %></span>
  </nav>

  <div class="flex gap-8">
    <!-- Filters Sidebar -->
    <div class="w-64 flex-shrink-0">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-base font-medium">Filters</h2>
      </div>

      <form id="filterForm">
        <!-- Categories -->
        <div class="mb-6">
          <h3 class="font-medium mb-3">Categories</h3>
          <div class="space-y-2">
            <% categories.forEach(cat => { %>
              <a href="/categories/<%= cat.slug %>" 
                 class="flex items-center justify-between py-1 hover:text-gray-900 
                        <%= category.category_id === cat.category_id ? 'text-black font-medium' : 'text-gray-500' %>">
                <span><%= cat.category_name %></span>
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            <% }); %>
          </div>
        </div>

        <!-- Sort By -->
        <div class="mb-6">
          <select name="sort" id="sortBy" class="w-full border-gray-300 rounded-md text-sm">
            <option value="popular" <%= filters.sort === 'popular' ? 'selected' : '' %>>Most Popular</option>
            <option value="newest" <%= filters.sort === 'newest' ? 'selected' : '' %>>Newest</option>
            <option value="price-asc" <%= filters.sort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price-desc" <%= filters.sort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
          </select>
        </div>

        <!-- Manufacturers -->
        <div class="mb-6">
          <h3 class="font-medium mb-3">Brands</h3>
          <div class="space-y-2">
            <% manufacturers.forEach(brand => { %>
              <label class="flex items-center">
                <input type="checkbox" 
                       name="manufacturer" 
                       value="<%= brand.id %>"
                       class="form-checkbox"
                       <%= filters.manufacturers?.includes(brand.id) ? 'checked' : '' %>>
                <span class="ml-2"><%= brand.name %></span>
              </label>
            <% }); %>
          </div>
        </div>

        <button type="submit" 
                id="applyFilters"
                class="w-full bg-black text-white py-2 rounded-md hover:bg-gray-800">
          Apply Filters
        </button>
      </form>
    </div>

    <!-- Main Content -->
    <div class="flex-1">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-medium"><%= category.category_name %></h1>
        <span class="text-sm text-gray-500">
          Showing <%= (pagination.current - 1) * 9 + 1 %>-<%= Math.min(pagination.current * 9, total) %> 
          of <%= total %> Products
        </span>
      </div>

      <!-- Products Grid -->
      <div class="grid grid-cols-3 gap-6" id="productsGrid">
        <% if (products && products.length > 0) { %>
          <% products.forEach(product => { %>
            <%- include('../partials/product-card', { product, formatToVND }) %>
          <% }); %>
        <% } else { %>
          <div class="col-span-3 text-center py-12">
            <p class="text-gray-500">No products found</p>
          </div>
        <% } %>
      </div>

      <!-- Pagination -->
      <div class="mt-10 flex items-center justify-between">
        <a href="?page=<%= pagination.current - 1 %>&sort=<%= filters.sort %>"
           class="flex items-center gap-2 text-sm hover:text-gray-600 <%= pagination.current === 1 ? 'pointer-events-none opacity-50' : '' %>">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Previous
        </a>

        <div class="flex gap-1">
          <% for(let i = 1; i <= pagination.total; i++) { %>
            <a href="?page=<%= i %>&sort=<%= filters.sort %>"
               class="w-8 h-8 flex items-center justify-center rounded 
                      <%= pagination.current === i ? 'bg-black text-white' : 'hover:bg-gray-100' %>">
              <%= i %>
            </a>
          <% } %>
        </div>

        <a href="?page=<%= pagination.current + 1 %>&sort=<%= filters.sort %>"
           class="flex items-center gap-2 text-sm hover:text-gray-600 <%= pagination.current === pagination.total ? 'pointer-events-none opacity-50' : '' %>">
          Next
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<script type="module">
  import ProductFilterService from '/js/modules/product/services/filter.service.js';
</script> 