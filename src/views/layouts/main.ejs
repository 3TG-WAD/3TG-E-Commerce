<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Shop.co - Your Fashion Destination">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/stylesheet.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@700&family=Roboto+Slab:wght@700&family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const styleSheets = document.styleSheets;
            console.log('Loaded stylesheets:', styleSheets.length);
            for(let i = 0; i < styleSheets.length; i++) {
                console.log(`Stylesheet ${i}:`, styleSheets[i].href);
            }

            const cssLink = document.querySelector('link[href="/css/stylesheet.css"]');
            console.log('CSS Link:', cssLink);
            if (cssLink) {
                console.log('CSS href:', cssLink.href);
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="font-sans antialiased">
    <%- include('../partials/header') %>
    
    <!-- Flash Messages -->
    <% if (messages.success) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline"><%= messages.success %></span>
        </div>
    <% } %>
    
    <% if (messages.error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline"><%= messages.error %></span>
        </div>
    <% } %>

    <div class="min-h-screen">
        <%- body %>
    </div>
    <%- include('../partials/footer') %>
    <script src="/js/main.js"></script>
    <script src="/js/register.js"></script>
    <script src="/js/forgot-password.js"></script>
    <script src="/js/reset-password.js"></script>
    <script src="/js/landing.js"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <% if (title === 'Purchase') { %>
        <script src="/js/purchase.js"></script>
    <% } %>
    <script src="/js/profile.js"></script>
    <script src="/js/pagination.js"></script>
</body>
</html>