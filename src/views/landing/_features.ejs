<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">NEW ARRIVALS</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <% if (typeof newArrivals !== 'undefined' && newArrivals.length > 0) { %>
        <% newArrivals.forEach(product => { %>
          <div class="bg-white rounded-lg shadow-sm p-4">
            <img
              src="<%= product.image %>"
              alt="<%= product.name %>"
              class="w-full h-64 object-cover mb-4 rounded"
            />
            <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
            <p class="text-gray-600 mb-4"><%= product.description %></p>
            <div class="flex justify-between items-center">
              <span class="text-lg font-bold">$<%= product.finalPrice %></span>
              <% if (product.discount > 0) { %>
                <span class="text-red-500">-<%= product.discount %>%</span>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-span-4 text-center text-gray-500">
          No new arrivals available at the moment.
        </div>
      <% } %>
    </div>
  </div>
</section>
