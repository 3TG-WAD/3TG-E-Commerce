<section class="py-12 bg-gray-100">
  <div class="container mx-auto px-4">
    <h2
      class="text-3xl font-black mb-12 text-center"
      style="font-family: sans-serif"
    >
      BROWSE BY DRESS STYLE
    </h2>

    <div class="grid grid-cols-12 gap-6 max-w-6xl mx-auto">
      <% const styles = [ 
      {name: 'Casual', image:'/images/browse-styles/casual.jpg', cols: 'col-span-5'}, 
      {name: 'Formal', image: '/images/browse-styles/formal.jpg', cols: 'col-span-7'}, 
      {name: 'Party', image: '/images/browse-styles/party.jpg', cols: 'col-span-7'}, 
      {name: 'Gym', image: '/images/browse-styles/gym.jpg', cols: 'col-span-5'} ] %> 
      <% styles.forEach((style) => { %>
      <div
        class="relative group cursor-pointer rounded-3xl overflow-hidden shadow-sm <%= style.cols %>"
      >
        <img
          src="<%= style.image %>"
          alt="<%= style.name %>"
          class="w-full h-72 object-cover"
        />
        <div
          class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 group-hover:opacity-100 transition-all duration-300"
        >
          <h3
            class="text-white text-3xl font-bold transform transition-all duration-300"
            style="font-family: sans-serif"
          >
            <%= style.name %>
          </h3>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
