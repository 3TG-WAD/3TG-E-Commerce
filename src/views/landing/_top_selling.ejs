<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">TOP SELLING</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <% if (typeof topSelling !== 'undefined' && topSelling.length > 0) { %>
        <% topSelling.forEach(product => { %>
          <a href="/products/<%= product.id %>" 
             class="block bg-white rounded-lg shadow-sm p-4 hover:shadow-md transition duration-300">
            <div class="relative">
              <img
                src="<%= product.image %>"
                alt="<%= product.name %>"
                class="w-full h-64 object-cover mb-4 rounded"
              />
              <% if (product.discount > 0) { %>
                <span class="absolute top-2 right-2 bg-red-500 text-white px-2 py-1 rounded-full text-sm">
                  -<%= product.discount %>%
                </span>
              <% } %>
            </div>
            <h3 class="text-lg font-semibold mb-2 hover:text-gray-700"><%= product.name %></h3>
            <p class="text-gray-600 mb-4 line-clamp-2"><%= product.description %></p>
            <div class="flex justify-between items-center">
              <div class="flex flex-col">
                <span class="text-lg font-bold"><%= product.finalPrice %></span>
                <% if (product.discount > 0) { %>
                  <span class="text-sm text-gray-500 line-through"><%= product.price %></span>
                <% } %>
              </div>
            </div>
          </a>
        <% }); %>
      <% } else { %>
        <div class="col-span-4 text-center text-gray-500">
          No top selling products available at the moment.
        </div>
      <% } %>
    </div>
  </div>
</section>
