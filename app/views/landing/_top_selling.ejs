<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">TOP SELLING</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <% topSelling.forEach(product => { %>
        <div class="bg-white rounded-lg shadow-sm p-4">
          <img
            src="<%= product.image %>"
            alt="<%= product.name %>"
            class="w-full h-64 object-cover mb-4 rounded"
          />
          <h3 class="font-semibold mb-2"><%= product.name %></h3>
          <div class="flex items-center mb-2">
            <% if (product.finalPrice) { %>
              <span class="text-lg font-bold">$<%= product.finalPrice.toFixed(2) %></span>
              <% if (product.discount > 0) { %>
                <span class="ml-2 text-gray-400 line-through">$<%= product.price.toFixed(2) %></span>
              <% } %>
            <% } else { %>
              <span class="text-lg font-bold">Price not available</span>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
    <div class="text-center mt-8">
      <button class="border border-black px-8 py-2 rounded-full hover:bg-black hover:text-white">
        View All
      </button>
    </div>
  </div>
</section>
