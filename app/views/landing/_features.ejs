<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">NEW ARRIVALS</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <% const products = [ {name: 'T-shirt with Tape Details', price: 120,
      image: 'https://placehold.co/300x300'}, {name: 'Skinny Fit Jeans', price:
      240, oldPrice: 280, image: 'https://placehold.co/300x300'}, {name:
      'Checkered Shirt', price: 180, image: 'https://placehold.co/300x300'},
      {name: 'Sleeve Striped T-shirt', price: 130, oldPrice: 160, image:
      'https://placehold.co/300x300'} ] %> <% products.forEach(product => { %>
      <div class="bg-white rounded-lg shadow-sm p-4">
        <img
          src="<%= product.image %>"
          alt="<%= product.name %>"
          class="w-full h-64 object-cover mb-4 rounded"
        />
        <h3 class="font-semibold mb-2"><%= product.name %></h3>
        <div class="flex items-center">
          <span class="text-lg font-bold">$<%= product.price %></span>
          <% if (product.oldPrice) { %>
          <span class="ml-2 text-gray-400 line-through"
            >$<%= product.oldPrice %></span
          >
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
    <div class="text-center mt-8">
      <button
        class="border border-black px-8 py-2 rounded-full hover:bg-black hover:text-white"
      >
        View All
      </button>
    </div>
  </div>
</section>
